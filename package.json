{
  "name": "bookmyshow",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "build-backend": "cd apps/backend && turbo run build --filter=backend",
    "start-backend": "cd apps/backend && pnpm run start",
    "build-frontend": "cd apps/admin && pnpm install && pnpm run start",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "typescript": "5.5.4"
  },
  "dependencies": {
    "turbo": "^2.3.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String          @id       @default(uuid())
  username         String
  password         String
  bookings         Booking[]
  payments         Payments[]
  role             String            @default("user")
  token            String?
  seats            Seat[]
  movies           Movie[] 
}

model Movie {
  id               String          @id       @default(uuid())
  title            String 
  description      String
  imageUrl         String
  bokings          Booking[]
  userId           String         
  user             User           @relation(fields:[userId] , references:[id])
  seats            Seat[]
  seatPrice        Int
  totalSeats       Int        
  cinemahall       String
  startTime        String
  banner           String
  year             Int
  genre            GenreType
  language         LanguageType
  trailerId        String?
}

model Booking {
  id                 String          @id       @default(uuid())
  totalPrice         Int
  movieId            String         
  userId             String   
  movie              Movie           @relation(fields:[movieId], references:[id])       
  user               User            @relation(fields:[userId], references:[id])
  seats              Int
  paymentId          String
  payment            Payments        @relation(fields:[paymentId] , references:[id])
  totalSeats         Int             @default(0)
}

model Seat {
  id                 String         @id       @default(uuid())
  seatNo             Int
  status             seatStatus
  movieId            String         
  userId             String   
  movie              Movie           @relation(fields:[movieId], references:[id])       
  user               User            @relation(fields:[userId], references:[id])       
  price              Int?
  orderId            String
}

model Payments {
  id                 String          @id       @default(uuid())
  userId             String               
  user               User            @relation(fields:[userId], references:[id])
  paymentType        PaymentState
  bookings           Booking[]
  orderId            String
}

enum LanguageType {
  Telugu
  Hindi
  English
  Tamil
  Malayalam
}

enum PaymentState {
  success
  failed
  pending
}

enum GenreType {
  Action
  Thriller
  Horror
}

enum seatStatus {
  available    
  booked
  pending  
}

enum seatType {
  General    
  Vip    
}
